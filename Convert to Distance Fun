{"metadata":{"language_info":{"name":"python","version":"3.7.8","mimetype":"text/x-python","codemirror_mode":{"name":"ipython","version":3},"pygments_lexer":"ipython3","nbconvert_exporter":"python","file_extension":".py"},"kernelspec":{"name":"python3","display_name":"Python 3","language":"python"}},"nbformat_minor":5,"nbformat":4,"cells":[{"cell_type":"code","source":"\nimport numpy as np\nfrom math import sin, cos, sqrt, atan2, radians\n\ndef DistanciaGPS (lat1,lon1,lat2,lon2):\n# approximate radius of earth in km\n    R = 6373.0\n\n\n    lat1 = radians(lat1) # dependiten de la planta\n    lon1 = radians(lon1)\n    lat2 = radians(lat2) # dependiente de la ubicacion del cliente\n    lon2 = radians(lon2)\n\n    dlon = lon2 - lon1\n    dlat = lat2 - lat1\n\n    a = sin(dlat / 2)**2 + cos(lat1) * cos(lat2) * sin(dlon / 2)**2\n    c = 2 * atan2(sqrt(a), sqrt(1 - a))\n\n    distance = R * c\n\n    return print(\"Result:\",np.round(distance), \"KM\")\n","metadata":{"trusted":true},"execution_count":12,"outputs":[]},{"cell_type":"code","source":"DistanciaGPS(52.2296756,21.0122287,52.406374,16.9251681)","metadata":{"trusted":true},"execution_count":13,"outputs":[{"name":"stdout","text":"Result: 279.0 KM\n","output_type":"stream"}]},{"cell_type":"code","source":"","metadata":{},"execution_count":null,"outputs":[]}]}